{
    "name": "geekbrains/blog",
    "require": {
        "php": "^8.0",
        "ext-mbstring": "*",
        "symfony/console": "^5.3",
        "doctrine/dbal": "^3.1",
        "php-di/php-di": "^6.3",
        "symfony/http-foundation": "^5.3",
        "symfony/polyfill-uuid": "^1.23",
        "fakerphp/faker": "^1.15",
        "monolog/monolog": "^2.3",
        "phpunit/phpunit": "^9.5"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest"
    },
    "autoload": {
        "psr-4": {
